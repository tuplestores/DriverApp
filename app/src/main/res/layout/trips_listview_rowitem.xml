<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="wrap_content">

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:divider="@android:color/transparent"
    android:clipToPadding="false"
    android:clipChildren="false"
    android:layout_gravity="center"
    card_view:cardBackgroundColor="#ffff"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="8dp">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
    <ImageView
        android:id="@+id/img_trips_start"
        android:layout_width="15dp"
        android:src="@drawable/ic_trip_icon"
        android:padding="4dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:layout_height="59dp" />

    <TextView
        android:layout_toRightOf="@id/img_trips_start"
        android:id="@+id/tv_tripstart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="5dp"
        android:textColor="#545454"
        android:text="Medical College Juncton dkfjkdjfkdjkjakdjk"/>
    <TextView
        android:layout_toRightOf="@id/img_trips_start"
        android:layout_below="@id/tv_tripstart"
        android:id="@+id/tv_tripend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="12sp"
        android:layout_marginStart="5dp"
        android:textColor="#545454"
        android:text="Medical College Juncton"/>
    <TextView
        android:id="@+id/tv_trip_total_charge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Rs.350"
        android:layout_marginEnd="5dp"
        android:textSize="16sp"
        android:textColor="#545454"

        android:layout_alignParentEnd="true"/>


</RelativeLayout>

</androidx.cardview.widget.CardView>
</LinearLayout>