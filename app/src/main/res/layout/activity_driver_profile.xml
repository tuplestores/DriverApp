<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DriverProfileActivity">

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="90dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="60dp"
        android:background="#fff">


        <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:background="@drawable/ic_profile_bk">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:background="@drawable/ic_profile_bk_white"
               android:layout_margin="2dp">

               <RelativeLayout
                   android:layout_marginTop="100dp"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">

                   <TextView
                       android:id="@+id/tv_mob_lable"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginStart="20dp"
                       android:textColor="#545454"
                       android:textSize="14sp"
                       android:padding="5dp"
                       android:text="Mobile"/>

                   <TextView
                       android:id="@+id/tv_mob"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginStart="150dp"
                       android:layout_alignParentEnd="true"
                       android:gravity="end"
                       android:textSize="14sp"
                       android:textColor="#2276ff"
                       android:layout_marginEnd="10dp"
                       android:padding="5dp"
                       android:layout_toRightOf="@id/tv_mob_lable"
                       android:text="89349494"/>

                   <TextView
                       android:id="@+id/tv_email_lbl"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_below="@id/tv_mob_lable"
                       android:layout_marginTop="50dp"
                       android:layout_marginStart="20dp"
                       android:textColor="#545454"
                       android:padding="5dp"
                       android:text="Email"/>

                   <TextView
                       android:id="@+id/tv_email"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginStart="120dp"
                       android:layout_toRightOf="@id/tv_email_lbl"
                       android:layout_below="@id/tv_mob"
                       android:layout_marginTop="50dp"
                       android:layout_alignParentEnd="true"
                       android:gravity="end"
                       android:textSize="14sp"
                       android:textColor="#2276ff"
                       android:layout_marginEnd="10dp"
                       android:padding="5dp"
                       android:text="xyz@gmail.com"/>

                   <TextView
                       android:id="@+id/tv_iv_lbl"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_below="@id/tv_email_lbl"
                       android:layout_marginTop="50dp"
                       android:layout_marginStart="20dp"
                       android:textSize="14sp"
                       android:textColor="#545454"
                       android:padding="5dp"
                       android:text="Invite code"/>

                   <TextView
                       android:id="@+id/tv_iv_val"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginStart="100dp"
                       android:layout_toRightOf="@id/tv_iv_lbl"
                       android:layout_below="@id/tv_email"
                       android:layout_marginTop="50dp"
                       android:layout_alignParentEnd="true"
                       android:gravity="end"
                       android:textSize="14sp"
                       android:textColor="#2276ff"
                       android:padding="5dp"
                       android:layout_marginEnd="10dp"
                       android:text="2276ff"/>




               </RelativeLayout>
           </LinearLayout>



       </LinearLayout>












    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp">
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@drawable/rider"
        app:civ_border_width="2dp"
        app:civ_border_color="#ffffffff"
        android:layout_centerInParent="true"/>
    </RelativeLayout>

</FrameLayout>





</androidx.coordinatorlayout.widget.CoordinatorLayout>