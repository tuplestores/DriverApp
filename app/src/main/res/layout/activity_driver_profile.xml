<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DriverProfileActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
       >
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
           />


    </com.google.android.material.appbar.AppBarLayout>



    <FrameLayout
        android:layout_marginTop="59dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <ProgressBar
            android:id="@+id/pgBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:max="100"
            android:backgroundTint="@color/colorTextRed"
            android:indeterminateTint="@color/colorTextBlue"
            android:layout_marginTop="-5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="60dp"
        android:layout_marginTop="59dp"
        android:background="#fff">


        <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
            android:layout_marginTop="40dp"
           android:background="@drawable/ic_profile_bk">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@drawable/ic_profile_bk_white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="100dp">

                    <TextView
                        android:id="@+id/tv_mob_lable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:padding="5dp"
                        android:text="Mobile"
                        android:textColor="#545454"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_mob"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="150dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toRightOf="@id/tv_mob_lable"
                        android:gravity="end"
                        android:padding="5dp"
                        android:text="@string/fetching_data"
                        android:textColor="#2276ff"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_email_lbl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_mob_lable"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="50dp"
                        android:padding="5dp"
                        android:text="Email"
                        android:textColor="#545454" />

                    <TextView
                        android:id="@+id/tv_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_mob"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="120dp"
                        android:layout_marginTop="50dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toRightOf="@id/tv_email_lbl"
                        android:gravity="end"
                        android:padding="5dp"
                        android:text="@string/fetching_data"
                        android:textColor="#2276ff"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_iv_lbl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_email_lbl"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="50dp"
                        android:padding="5dp"
                        android:text="Name"
                        android:textColor="#545454"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_email"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="100dp"
                        android:layout_marginTop="50dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toRightOf="@id/tv_iv_lbl"
                        android:gravity="end"
                        android:padding="5dp"
                        android:text="@string/fetching_data"
                        android:textColor="#2276ff"
                        android:textSize="14sp" />


                </RelativeLayout>
            </LinearLayout>



       </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@drawable/rider"
        app:civ_border_width="2dp"
        app:civ_border_color="#ffffffff"
        android:layout_centerInParent="true"/>
    </RelativeLayout>

</FrameLayout>





</androidx.coordinatorlayout.widget.CoordinatorLayout>