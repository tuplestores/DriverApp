<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- The bottom layer is blue square.-->
    <item>
        <shape android:shape="oval">
            <size
                android:width="100dp"
                android:height="100dp" />
            <solid android:color="@color/common_google_signin_btn_text_light" />
        </shape>
    </item>

    <!-- The middle layer is green circle.-->
    <item
        android:left="12dp"
        android:right="12dp"
        android:top="12dp"
        android:bottom="12dp">

        <shape android:shape="oval"
            >
            <size
                android:width="100dp"
                android:height="100dp" />
            <solid android:color="@color/common_google_signin_btn_text_light" />
        </shape>
    </item>

    <!-- The top layer is red ring.-->



</layer-list>